                  <li><a class="dropdown-item" href="/NHL">NHL</a></li>
                </ul>
              </li>
            </ul>
          </div>
          {{#if logged_in}}
          <button type="button" href="" class="btn btn-outline-light">Log Out</button>
          {{else}}
          <button type="button" href="/login" class="btn btn-outline-light m-2">Sign Up</button>
          <button type="button" href="/login" class="btn btn-outline-light">Log In</button>
          {{/if}}
